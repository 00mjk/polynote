{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true, // show typescript in devtools. might be slow according to https://webpack.js.org/configuration/devtool/
    "moduleResolution": "node"
  }
}